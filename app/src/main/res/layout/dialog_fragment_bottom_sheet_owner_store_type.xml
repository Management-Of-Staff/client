<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetOwnerStoreType"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/round_white_background"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" >

    <TextView
        android:id="@+id/tv_title_store_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/title_store_type"
        android:textSize="@dimen/head_text_size"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="20dp" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cafeteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/round_blue_border"
                android:paddingVertical="14dp"
                android:text="@string/cafeteria"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/round_blue_border"
                android:text="@string/cafe"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_convenience_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_blue_border"
                android:text="@string/convenience_store"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_pc_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/round_blue_border"
                android:text="@string/pc_room"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_fitness_club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_blue_border"
                android:text="@string/fitness_club"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_blue_border"
                android:layout_marginStart="5dp"
                android:text="@string/academy"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_office_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_blue_border"
                app:strokeColor="@color/blue4"
                app:strokeWidth="1dp"
                android:text="@string/office_help"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingVertical="14dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/round_blue_border"
                android:layout_marginStart="5dp"
                android:text="@string/etc"
                android:textColor="@color/blue4"
                android:textSize="@dimen/body_text_size"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <Button
        android:id="@+id/btn_choose_store_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/neo_medium_white_style"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_app_color_background"
        android:text="@string/confirm"
        android:textSize="@dimen/title_text_size"
        android:layout_gravity="center" />

</LinearLayout>